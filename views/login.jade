doctype html
html
  head
    include head.jade
    include navbar.jade

  body
    h2 LOGIN
    div.container.row
      div#panel.col-md-3.col-md-offset-5
        form(action='/users/login' method='post')
          br
          if message
            h4 #{message}
          input(name='username' type='text' placeholder='USERNAME' class='col-md-12') 
          br
          input(name='password' type='password' placeholder='PASSWORD' class='col-md-12') 
          br
          button(class='btn btn-primary btn-lg btn-block') LOGIN
          br
          a(href='/register') REGISTER


  include scripts.jade
