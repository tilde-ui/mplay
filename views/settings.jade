doctype html
html
  head
    include head.jade
    include navbar.jade

  body
    h2 SETTINGS
    div.container.row
      br
      div#panel.col-md-10.col-md-offset-1
        form(action='/users/register' method='post')
          br
          div.row
            if message
              h4.col-md-4.col-md-offset-5 #{message}

          div.row
            div.col-md-6
              p(class='col-md-8')= user.firstName
              br
              br
              p(class='col-md-8')= user.lastName
              br
              br
              p(class='col-md-8')= user.email
              br
              br
              input(name='password' type='password' placeholder='PASSWORD' class='col-md-8')
            div.col-md-6
              textarea(name='bio' type='text' rows='10' placeholder='BIO' class='col-md-12')
              br
              br
              button(class='btn btn-primary btn-lg btn-block') REGISTER
              a(href='/login') LOGIN

  include scripts.jade
