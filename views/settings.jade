extends layout.jade

block content
  div.row
    div.col.m8.s12.offset-m2
      div.card
        div.card-content
          span.card-title.black-text Edit Account
          p #{message}
          form(action='/users/update' method='post')
            div.row
              div.input-field.col.m12.s12
                input(name='firstName' type='text' id='accFirstName' value='#{user.firstName}')
                label(for='accFirstName') First Name
              div.input-field.col.m12.s12
                input(name='lastName' type='text' id='accLastName' value='#{user.lastName}')
                label(for='accLastName') Last Name
              div.input-field.col.m12.s12
                input(name='email' type='text' id='accEmail' value='#{user.email}')
                label(for='accEmail') Email
            div.row
              div.input-field.col.m12.s12
                textarea.materialize-textarea(name='bio' id='accBio' placeholder='Bio' style='height:200px' value='#{user.bio}')
                label(for='accBio') Bio
            div.row
              div.col.m6
                button.btn.col.m12 Save Changes
              div.col.m6
                a(href='/dash')
                  button.btn.col.m12(type='button') Cancel
